<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme_dialog_with_parent" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="trans_loading_dialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="title_text_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">45px</item>
        <item name="android:paddingRight">45px</item>
        <item name="android:background">@drawable/trans_half_trans_bg_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">48px</item>
    </style>

    <style name="titlebar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">129px</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">13</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">51px</item>
        <item name="android:textColor">@color/black_33</item>
    </style>

    <style name="title_img_btn_style">
        <item name="android:layout_width">111px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/trans_half_trans_bg_selector</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="head_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/line_dc</item>
    </style>

    <style name="dividerLine30">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30px</item>
        <item name="android:background">@color/page_bg</item>
    </style>

    <style name="lineEb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/line_eb</item>
    </style>

    <style name="lineEbMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_marginLeft">36px</item>
        <item name="android:layout_marginRight">36px</item>
        <item name="android:background">@color/line_eb</item>
    </style>

    <style name="mProgressStyleCir">
        <item name="android:indeterminateDrawable">@drawable/shape_progress</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
