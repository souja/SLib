    <style name="jz_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/jz_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="jz_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="dot_msgCount">
        <item name="android:layout_width">54px</item>
        <item name="android:layout_height">54px</item>
        <item name="android:background">@drawable/shape_red_dot</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="cropImgBtn">
        <item name="android:layout_width">210px</item>
        <item name="android:layout_height">120px</item>
        <item name="android:background">@drawable/trans_half_trans_bg_selector</item>
        <item name="android:textSize">48px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="mTextProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/layer_text_progress</item>
    </style>

    <style name="mTextProgressLight" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/layer_text_progress_light</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="CommProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@android:color/white</item>
    </style>


    <style name="mTab">
        <item name="tabIndicatorColor">@color/lib_main_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">-1dp</item>
        <item name="tabPaddingEnd">-1dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/mTabTxt</item>
        <item name="tabSelectedTextColor">@color/black_33</item>
    </style>

    <style name="mTabTxt">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_af</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="blueLoading" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/lib_main_color</item>
    </style>
</resources>